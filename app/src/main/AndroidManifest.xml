<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rharasimiuk.mundial">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="Mundial 2018"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateAccountActivity"
            android:label="Create account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BetActivity"
            android:label="Bet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminActivity"
            android:label="Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PointsActivity"
            android:label="Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CheckBetsActivity"
            android:label="CheckBets"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TablesActivity"
            android:label="Tables"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>